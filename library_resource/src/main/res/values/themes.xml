<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RootTheme" parent="Theme.AppCompat.Light" />

    <!--配置Theme Style-->
    <style name="BaseTheme" parent="RootTheme">
        <item name="android:textViewStyle">@style/TextView.Compat</item>

        <item name="android:editTextStyle">@style/EditText.Compat</item>
        <item name="editTextStyle">@style/EditText.Compat</item>

        <item name="android:buttonStyle">@style/Button.Compat</item>
        <item name="buttonStyle">@style/Button.Compat</item>

        <item name="toolbarStyle">@style/Toolbar.Common</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation</item>
        <!--Toolbar PopupMenu位置-->
        <!--<item name="actionOverflowMenuStyle">@style/Toolbar.PopupMenu.Overflow</item>-->
        <!--Toolbar PopupMenu 分割线-->
        <item name="android:dropDownListViewStyle">@style/Toolbar.PopupMenu.Overflow.Divider</item>
        <item name="actionMenuTextAppearance">@style/Toolbar.Menu</item>
        <!--Toolbar上的菜单文字颜色-->
        <item name="actionMenuTextColor">?attr/common_toolbar_menu_text_color</item>
    </style>

    <!--配置Config-->
    <style name="ConfigTheme.Base" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/activityBackground</item>
        <item name="android:actionBarSize">@dimen/toolbar_height</item>
        <item name="widget_primary">@color/widget_primary</item>
        <item name="widget_primary_enable">@color/widget_primary_enable</item>

        <item name="common_divider_color">@color/default_divider_color</item>

        <!--Toolbar上的Menu文字大小-->
        <item name="common_toolbar_menu_text_size">@dimen/text_size_small_dp</item>
        <!--Toolbar上的Menu文字颜色-->
        <item name="common_toolbar_menu_text_color">@color/text_black_color</item>

        <!--Toolbar标题颜色-->
        <item name="common_title_text_color">@color/text_black_color</item>
        <!--Toolbar标题文字大小-->
        <item name="common_title_text_size">@dimen/text_size_large_dp</item>
        <!--配置全局Text文字颜色-->
        <item name="common_text_color">@color/common_text_color</item>
        <!--配置全局Text文字大小-->
        <item name="common_text_size">@dimen/common_text_size</item>

        <!--全局公共的EditText文字颜色-->
        <item name="common_edit_text_color">@color/common_edit_text_color</item>
        <!--全局公共的EditText Hint文字颜色-->
        <item name="common_edit_text_color_hint">@color/common_edit_text_color_hint</item>
        <!--全局公共的EditText文字大小-->
        <item name="common_edit_text_size">@dimen/common_edit_text_size</item>
        <!--全局公共的EditText文字长度限制-->
        <item name="common_edit_text_max_length">@integer/common_edit_text_length</item>

        <!--全局公共的Button文字颜色-->
        <item name="common_button_text_color">@color/common_button_text_color</item>
        <!--全局公共的Button文字大小-->
        <item name="common_button_text_size">@dimen/common_button_text_size</item>

        <!--公共CheckBox选中颜色-->
        <item name="common_check_box_checked_color">@color/common_check_box_checked_color</item>
        <!--公共CheckBox默认颜色-->
        <item name="common_check_box_normal_color">@color/common_check_box_normal_color</item>
        <!--公共RadioButton选中颜色-->
        <item name="common_radio_button_checked_color">@color/common_radio_button_checked_color
        </item>
        <!--公共RadioButton默认颜色-->
        <item name="common_radio_button_normal_color">@color/common_radio_button_normal_color</item>

        <!--该属性可以控制Toolbar溢出菜单按钮颜色-->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!--该主题为AppTheme基类，主要用于在app module里配置自定义属性-->
    <style name="ConfigTheme" parent="ConfigTheme.Base" />

    <!--可供直接使用的Theme基类 不同API Level可自行差异化配置-->
    <style name="AppTheme" parent="ConfigTheme">

    </style>
    <!--没有ActionBar的Theme-->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <!-- 隐藏系统标题栏 -->
        <item name="windowNoTitle">true</item>
    </style>

    <!--全屏Theme-->
    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--沉浸式Theme-->
    <style name="AppTheme.Immersion" parent="AppTheme.NoActionBar" />

    <!--启动页Theme-->
    <style name="AppTheme.LaunchTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--透明Theme-->
    <style name="AppTheme.Translucent" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/transparency</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>