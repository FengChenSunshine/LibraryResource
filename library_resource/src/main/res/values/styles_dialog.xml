<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Resource.Dialog.Base" parent="@android:style/Theme.Dialog">
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="Resource.Dialog.Common" parent="Resource.Dialog.Base" />

    <style name="Resource.AppCompatDialog.Base" parent="Theme.AppCompat.Light.Dialog">
        <!--去掉系统默认标题栏-->
        <item name="windowNoTitle">true</item>
        <!--这个很关键,默认的背景会有16dp的边距-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 屏幕背景是否变暗:0.0-1.0,系统默认0.6 -->
        <item name="android:backgroundDimAmount">0.6</item>
        <!--为了避免在有 NavigationBar 的手机上 Dialog 从 NavigationBar 底部上来。-->
        <!--去掉 Dialog 的动画，使用 View 的动画-->
        <item name="android:windowAnimationStyle">@null</item>

        <item name="listPreferredItemPaddingLeft">0dp</item>
        <item name="listPreferredItemPaddingRight">0dp</item>
    </style>

    <style name="Resource.AppCompatDialog.Common" parent="Resource.AppCompatDialog.Base" />

    <style name="Resource.AppCompatDialog.AppTheme.Base" parent="Resource.AppTheme.NoActionBar">
        <!--去掉系统默认标题栏-->
        <item name="windowNoTitle">true</item>
        <!--这个很关键,默认的背景会有16dp的边距-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 屏幕背景是否变暗:0.0-1.0,系统默认0.6 -->
        <item name="android:backgroundDimAmount">0.6</item>
        <!--为了避免在有 NavigationBar 的手机上 Dialog 从 NavigationBar 底部上来。-->
        <!--去掉 Dialog 的动画，使用 View 的动画-->
        <item name="android:windowAnimationStyle">@null</item>

        <item name="listPreferredItemPaddingLeft">0dp</item>
        <item name="listPreferredItemPaddingRight">0dp</item>

        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="windowActionBar">false</item>
        <item name="android:listDivider">@null</item>
        <item name="android:buttonBarStyle">@style/Widget.AppCompat.ButtonBar.AlertDialog</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="Resource.AppCompatDialog.AppTheme.Common" parent="Resource.AppCompatDialog.Base" />

</resources>