<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="divider">
        <item name="android:background">?attr/common_divider_color</item>
    </style>

    <style name="divider_1dp" parent="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="divider_1px" parent="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="divider_margin_1dp" parent="divider_1dp">
        <item name="android:layout_marginLeft">@dimen/common_layout_margin_left</item>
        <item name="android:layout_marginRight">@dimen/common_layout_margin_right</item>
    </style>

    <style name="divider_margin_1px" parent="divider_1px">
        <item name="android:layout_marginLeft">@dimen/common_layout_margin_left</item>
        <item name="android:layout_marginRight">@dimen/common_layout_margin_right</item>
    </style>

    <style name="divider_vertical_1dp" parent="divider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="divider_vertical_1px" parent="divider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="divider_vertical_margin_1dp" parent="divider_vertical_1dp">
        <item name="android:layout_marginTop">@dimen/common_layout_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/common_layout_margin_bottom</item>
    </style>

    <style name="divider_vertical_margin_1px" parent="divider_vertical_1px">
        <item name="android:layout_marginTop">@dimen/common_layout_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/common_layout_margin_bottom</item>
    </style>

</resources>