<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--主题色，需要在app model下覆盖-->
    <!--应用的主要色调,actionBar默认使用该颜色,Toolbar导航栏的底色-->
    <color name="colorPrimary">#008577</color>
    <!--应用的主要暗色调,状态栏statusBarColor默认使用该颜色-->
    <color name="colorPrimaryDark">#00574B</color>
    <!--状态栏颜色,默认使用colorPrimaryDark-->
    <color name="statusBarColor">?attr/colorPrimaryDark</color>
    <!--窗口背景颜色-->
    <color name="windowBackground">#F1F0F2</color>
    <!--底部栏颜色-->
    <color name="navigationBarColor">@color/black</color>
    <!--应用的前景色,ListView的分割线,switch滑动区默认使用该颜色-->
    <color name="colorForeground">#999999</color>
    <!--应用的背景色,popMenu的背景默认使用该颜色-->
    <color name="colorBackground">?android:windowBackground</color>
    <!--CheckBox,RadioButton,SwitchCompat等一般控件的选中效果默认采用该颜色-->
    <color name="colorAccent">?attr/widget_primary</color>
    <!--控件选中时的颜色,默认使用colorAccent-->
    <color name="colorControlActivated">?attr/colorAccent</color>
    <!--CheckBox,RadioButton,SwitchCompat等默认状态的颜色-->
    <color name="colorControlNormal">#999999</color>
    <!--控件按压时的色调-->
    <color name="colorControlHighlight">@color/ripple_material_light</color>
    <!--默认按钮的背景颜色-->
    <color name="colorButtonNormal">?attr/widget_primary</color>

    <!--Widget控件主题色,解决当主题色和控件主题色不一致问题-->
    <color name="widget_primary">@color/colorPrimary</color>
    <color name="widget_primary_enable">@color/colorPrimary</color>

    <color name="white">#FFF</color>
    <color name="black">#000</color>

    <!--灰度值-->
    <color name="gray_32">#202020</color>
    <color name="gray_48">#303030</color>
    <color name="gray_64">#404040</color>
    <color name="gray_96">#606060</color>
    <color name="gray_128">#808080</color>
    <color name="gray_160">#A0A0A0</color>
    <color name="gray_192">#C0C0C0</color>
    <color name="gray_224">#E0E0E0</color>
    <color name="gray_240">#F0F0F0</color>

    <!--透明度-->
    <color name="transparency">#00000000</color>
    <color name="transparency_31">#07000000</color>
    <color name="transparency_63">#10000000</color>
    <color name="transparency_125">#20000000</color>
    <color name="transparency_250">#40000000</color>
    <color name="transparency_375">#60000000</color>
    <color name="transparency_500">#80000000</color>
    <color name="transparency_625">#A0000000</color>
    <color name="transparency_750">#C0000000</color>
    <color name="transparency_875">#E0000000</color>

    <!--文字颜色——黑色-->
    <color name="text_black_color">#333333</color>
    <!--文字颜色——灰色-->
    <color name="text_gray_color">#666666</color>
    <!--文字颜色——浅灰色-->
    <color name="text_light_gray_color">#999999</color>

    <!--标题文字颜色-->
    <color name="common_title_text_color">#ffffff</color>
    <!--副标题文字颜色-->
    <color name="common_sub_title_text_color">#ffffff</color>

    <!--默认文字颜色-->
    <color name="common_text_color">#333333</color>
    <!--默认EditText文字颜色-->
    <color name="common_edit_text_color">#333333</color>
    <!--默认EditText Hint文字颜色-->
    <color name="common_edit_text_color_hint">#666666</color>
    <!--默认Button文字颜色-->
    <color name="common_button_text_color">#333333</color>

    <!--公共CheckBox选中颜色-->
    <color name="common_check_box_checked_color">@color/widget_primary</color>
    <!--公共CheckBox默认颜色-->
    <color name="common_check_box_normal_color">#999999</color>
    <!--公共RadioButton选中颜色-->
    <color name="common_radio_button_checked_color">@color/widget_primary</color>
    <!--公共RadioButton默认颜色-->
    <color name="common_radio_button_normal_color">#999999</color>

    <!--分割线颜色-->
    <color name="default_divider_color">#F1F0F2</color>
    <!--位于Toolbar和页面内容之间的分割线颜色-->
    <color name="common_divider_toolbar_content_color">#333333</color>

    <!--默认透明度-->
    <color name="common_transparency_color">@color/transparency_375</color>

    <!--图片加载框架默认占位图颜色-->
    <color name="common_image_loader_placeholder_color">#999999</color>

</resources>