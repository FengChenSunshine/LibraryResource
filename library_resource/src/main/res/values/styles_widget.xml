<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView.Compat" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Common</item>
    </style>

    <!--跑马灯样式-->
    <style name="TextView.Compat.Marquee" parent="TextView.Compat">
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText.Compat" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <!--这样设置时光标颜色与textColor颜色一致，若要自定义应该使用shape，不能简单设置color-->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">?attr/common_edit_text_color</item>
        <item name="android:textSize">?attr/common_edit_text_size</item>
        <item name="android:textColorHint">?attr/common_edit_text_color_hint</item>
        <item name="android:maxLength">?attr/common_edit_text_max_length</item>
    </style>

    <!--输入手机号码样式-->
    <style name="EditText.Compat.Mobile" parent="EditText.Compat">
        <item name="android:digits">0123456789</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">11</item>
    </style>

    <style name="Button.Base" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?attr/common_button_text_color</item>
        <item name="android:textSize">?attr/common_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Button.Compat" parent="Button.Base">
        <!-- 取消 Button 字符默认大写的功能（会导致 Spannable 失效），默认值只影响 5.0 以上版本，但使用Compat包后，4.x 版本也会受到影响 -->
        <!-- http://stackoverflow.com/questions/29007746/button-settext-with-spannable-dosent-work-for-android-5-0-lollipop -->
        <item name="android:textAllCaps">false</item>
    </style>

    <!--需要设置到theme属性上-->
    <style name="CheckBox.Compat" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">?attr/common_check_box_normal_color</item>
        <item name="colorControlActivated">?attr/common_check_box_checked_color</item>
        <item name="android:textAppearance">@style/TextAppearance.Common</item>
    </style>

    <!--需要设置到theme属性上-->
    <style name="RadioButton.Compat" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">?attr/common_radio_button_normal_color</item>
        <item name="colorControlActivated">?attr/common_radio_button_checked_color</item>
        <item name="android:textAppearance">@style/TextAppearance.Common</item>
    </style>

</resources>